# HTTP server for protocol.oci.tj
server {
    listen 80;
    server_name protocol.oci.tj;

    client_max_body_size 100M;

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;

    # Backend API routes - добавляем префикс /api-v1
    location /api-v1/ {
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # API routes без префикса - добавляем /api-v1/ при проксировании
    location ~ ^/(tasks|auth|users|admin|tech-admin|comments|upload|admin-chat|admin-messages)(/.*)?$ {
        rewrite ^/(.*)$ /api-v1/$1 break;
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Uploads
    location /uploads/ {
        proxy_pass http://localhost:5001;
    }

    # Frontend - Proxy to React Router SSR on port 3001
    # ДОЛЖЕН БЫТЬ ПОСЛЕДНИМ, чтобы не перехватывал API запросы
    location / {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}

# IP access
server {
    listen 80 default_server;
    server_name 193.111.11.100 _;

    # API routes
    location /api-v1/ {
        proxy_pass http://localhost:5001;
    }

    location ~ ^/(tasks|auth|users|admin|tech-admin|comments|upload|admin-chat|admin-messages)(/.*)?$ {
        rewrite ^/(.*)$ /api-v1/$1 break;
        proxy_pass http://localhost:5001;
    }

    location /uploads/ {
        proxy_pass http://localhost:5001;
    }

    # Frontend
    location / {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
