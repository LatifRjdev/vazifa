# HTTPS server block for ptapi.oci.tj (API Backend)
server {
    listen 443 ssl http2;
    server_name ptapi.oci.tj;

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/ptapi.oci.tj/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ptapi.oci.tj/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Increase client body size for file uploads
    client_max_body_size 100M;
    client_body_timeout 300s;

    # Primary API endpoint with /api-v1/ prefix
    location /api-v1/ {
        # CORS headers
        add_header Access-Control-Allow-Origin "https://protocol.oci.tj" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization, Cache-Control, Pragma, Expires, X-Requested-With, Accept, Origin, User-Agent" always;
        add_header Access-Control-Allow-Credentials "true" always;

        # Handle OPTIONS preflight
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin "https://protocol.oci.tj" always;
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH" always;
            add_header Access-Control-Allow-Headers "Content-Type, Authorization, Cache-Control, Pragma, Expires, X-Requested-With, Accept, Origin, User-Agent" always;
            add_header Access-Control-Allow-Credentials "true" always;
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }

        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        
        # Buffer settings for large requests
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
    }

    # API routes without /api-v1/ prefix - rewrite and proxy to backend
    # КРИТИЧЕСКИ ВАЖНО: это исправляет 404 для /tasks/create-multiple
    location ~ ^/(tasks|auth|users|admin|tech-admin|comments|upload|admin-chat|admin-messages|workspace|workspaces|projects|organization|notifications)(/.*)?$ {
        # CORS headers
        add_header Access-Control-Allow-Origin "https://protocol.oci.tj" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH" always;
        add_header Access-Control-Allow-Headers "Content-Type, Authorization, Cache-Control, Pragma, Expires, X-Requested-With, Accept, Origin, User-Agent" always;
        add_header Access-Control-Allow-Credentials "true" always;

        # Handle OPTIONS preflight
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin "https://protocol.oci.tj" always;
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH" always;
            add_header Access-Control-Allow-Headers "Content-Type, Authorization, Cache-Control, Pragma, Expires, X-Requested-With, Accept, Origin, User-Agent" always;
            add_header Access-Control-Allow-Credentials "true" always;
            add_header Content-Length 0;
            add_header Content-Type text/plain;
            return 204;
        }

        rewrite ^/(.*)$ /api-v1/$1 break;
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
    }

    # File uploads
    location /uploads/ {
        add_header Access-Control-Allow-Origin "https://protocol.oci.tj" always;
        add_header Access-Control-Allow-Credentials "true" always;
        
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Health check endpoint
    location /health {
        access_log off;
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # Root endpoint
    location = / {
        add_header Access-Control-Allow-Origin "https://protocol.oci.tj" always;
        add_header Access-Control-Allow-Credentials "true" always;
        
        proxy_pass http://localhost:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Logs
    access_log /var/log/nginx/ptapi.oci.tj.access.log;
    error_log /var/log/nginx/ptapi.oci.tj.error.log;
}

# HTTP redirect to HTTPS
server {
    listen 80;
    server_name ptapi.oci.tj;
    
    # Redirect all HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}
